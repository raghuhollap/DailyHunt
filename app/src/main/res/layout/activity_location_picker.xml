<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/cast_expanded_controller_ad_background_layout_height"
    android:layout_height="640dp"
    android:background="@mipmap/ic_backgroundimage"
    android:visibility="visible"
    tools:context="com.ark.dailyhunt.LocationPickerActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="@string/default_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getLocation"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="135dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:background="@mipmap/ic_selectnewlocation" />

    <Button
        android:id="@+id/storedLocation"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/getLocation"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/getLocation"
        android:layout_toRightOf="@+id/getLocation"
        android:background="@mipmap/ic_selectstoredlocation" />


</RelativeLayout>
